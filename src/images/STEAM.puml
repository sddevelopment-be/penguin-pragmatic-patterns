@startuml
title STEAM

left to right direction

!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4.puml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml

skinparam dpi 240
skinparam defaultTextAlignment left

skinParam maxMessageSize 168
skinparam wrapWidth 194
skinparam nodesep 5
skinparam ranksep 5

skinparam linetype polyline

hide stereotype
hide footbox

System_Boundary(resources, "Available Resources") {
    System(support, "Support", "Others willing to help you to see your endeavours succeed. (your social credit)")
    System(time, "Time", "Amount of time you spend on a single endeavour. \n\n")
    System(energy, "Energy", "Amount of effort you can put in. Your alertness. \n\n ")
    System(attention, "Attention", "Focus, concentration, the ability to be present in the moment. \n")
    System(money, "Money", "Monetary funds available. \n Cash, dough, moolah, greenbacks, etc. \n")
}

Person(person, "Person", "Someone living their lives, trying to make the most of it.", $tags="Element+Person")

System_Boundary(choices, "Possible Choices") {
    Container(optionOne, "Option one", "Binge-watching a show with friends.", $tags="Element+Container")
    Container(optionTwo, "Option two", "Doing household chores and admin.", $tags="Element+Container")
    Container(optionThree, "Option three", "Learning about ways to \n boost personal productivity.", $tags="Element+Container")

    Container(impactOne, "Impact of option one", "S: ++; T: -; E: -; A: --; M: no impact")

    Container(impactTwo, "Impact of option two", "S: ; T: ; E: ; A: ; M: ")
    Container(impactThree, "Impact of option three", "S: ; T: ; E: ; A: ; M: ")
}

person --> resources: "has a set of"
person --> choices: "spends evening doing one of"
resources -right[hidden]-> choices

person -[hidden]-> optionOne
person -[hidden]-> support

support-[hidden]->time
time-[hidden]->energy
energy-[hidden]->attention
attention-[hidden]->money

optionOne -right[hidden]-> optionTwo
optionTwo -right[hidden]-> optionThree

optionOne --> impactOne
optionTwo --> impactTwo
optionThree --> impactThree

impactOne -left[hidden]-> impactTwo
impactTwo -left[hidden]-> impactThree

@enduml