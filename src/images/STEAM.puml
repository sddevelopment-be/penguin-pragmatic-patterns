@startuml
title STEAM

left to right direction

!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4.puml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml

skinparam dpi 240
skinparam defaultTextAlignment left

skinParam maxMessageSize 184
skinparam wrapWidth 204

skinparam linetype polyline

hide stereotype
hide footbox

System_Boundary(resources, "Available Resources") {
    System(support, "Support", "Others willing to help you to see your endeavours succeed. (your social credit)")
    System(time, "Time", "Amount of time you spend on a single endeavour. \n")
    System(energy, "Energy", "Amount of effort you can put in. Your alertness. \n")

    System(attention, "Attention", "Focus, concentration, the ability to be present in the moment.")
    System(money, "Money", "Monetary funds available. \n Cash, dough, moolah, greenbacks, etc.")
}

System_Boundary(choices, "Possible Choices") {
    Container(optionOne, "Option one", "\nBinge-watching a show with friends. \n", $tags="Element+Container")
    Container(optionTwo, "Option two", "\nDoing household chores and admin. \n", $tags="Element+Container")
    Container(optionThree, "Option three", "\nLearning about ways to \n boost personal productivity.\n", $tags="Element+Container")

    Container(impactOne, "Impact of option one \n\n",     "**S:** ↑ **T:** ↓  **E:** ↓  **A:** ↡  **M**: ↔ ")
    Container(impactTwo, "Impact of option two \n\n",     "**S:** ↔   **T:** ↡  **E:** ↓  **A:** ↑  **M**: ↔")
    Container(impactThree, "Impact of option three \n\n", "**S:** ↓  **T:** ↑  **E:** ↑  **A:** ↡  **M**: ↓")
}

resources -left[hidden]-> choices

support-[hidden]->time
time-[hidden]->energy


attention-[hidden]->money

optionOne -left[hidden]-> optionTwo
optionTwo -left[hidden]-> optionThree

optionOne --> impactOne
optionTwo --> impactTwo
optionThree --> impactThree

impactOne -left[hidden]-> impactTwo
impactTwo -left[hidden]-> impactThree

@enduml